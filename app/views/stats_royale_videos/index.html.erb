<h1>StatsRoyaleVideos</h1>

<div class="search-form">
  <%= form_with url: stats_royale_videos_path, method: :get, local: true do |f| %>
    <%= f.select :card_name, @cards.pluck(:name), include_blank: true %>
    <%= f.submit "検索", name: nil %>
  <% end %>
</div>

<table>
  <thead>
    <tr>
      <th>投稿日時</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @videos.each do |video| %>
      <tr>
        <td><%= video.formated_published_at %></td>
        <td><%= link_to(image_tag(video.thumbnail_url), video) %></td>
        <td><%= link_to 'Show', video %></td>
      </tr>
    <% end %>

  </tbody>
</table>
<%= paginate @videos %>
